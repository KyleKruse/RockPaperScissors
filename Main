def main_Menu():
    while True:
        print('''Do you want to play a game?
        [1] Yes
        [2] No''')
        choice = input("---> ")

        try:
            choice = int(choice)
            start_game(choice)
        except ValueError:
            print("Please try again.. that's not an option")

def start_game(choice):
    if choice == 1:
        name = input("What name would you like to go by?\n")
        # use name for filename
        actual_game(name)
        
    elif choice == 2:
        print("I guess you are too scared to lose, maybe next time.")
        exit()
    
    else:
        print("That isn't a valid option bub...")
        main_Menu()

